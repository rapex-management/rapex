# Development Environment Variables
# These variables optimize file watching and hot reloading

# Disable polling for file watching (use native events instead)
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Enable efficient file watching
CHOKIDAR_INTERVAL=100
WATCHPACK_POLL=false

# Next.js optimizations
NEXT_TELEMETRY_DISABLED=1
FAST_REFRESH=true

# Backend settings
DJANGO_SETTINGS_MODULE=rapex_main.settings
DEBUG=True
PYTHONUNBUFFERED=1

# Database
DB_ENGINE=postgresql
DB_NAME=rapex
DB_USER=rapex
DB_PASSWORD=rapex_pass
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# API URLs
BACKEND_URL=http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
